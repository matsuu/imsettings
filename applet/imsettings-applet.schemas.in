<!-- -*- mode: xml -*- -->
<gconfschemafile>
  <schemalist>
    <schema>
      <key>/schemas/apps/imsettings-applet/notify_on_bubble</key>
      <applyto>/apps/imsettings-applet/notify_on_bubble</applyto>
      <owner>imsettings-applet</owner>
      <type>bool</type>
      <default>TRUE</default>
      <locale name="C">
	<short>Whether to notify informations with libnotify</short>
	<long>
	  If false, all of informations will not delivered through libnotify, except error and warning messages.
	</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/imsettings-applet/trigger_key</key>
      <applyto>/apps/imsettings-applet/trigger_key</applyto>
      <owner>imsettings-applet</owner>
      <type>string</type>
      <default>disabled</default>
      <locale name="C">
	<short>A shortcut key to connect to/disconnect from Input Method</short>
	<long>
	  The keybinding which connect to Input Method or disconnect from Input
	  Method. The format looks like "&lt;Control&gt;a" or "&lt;Shift&gt;&lt;Alt&gt;F1".
	  The parser is fairly liberal and allows lower or upper case, and also
	  abbreviations such as "&lt;Ctl&gt;" and "&lt;Ctrl&gt;".
	  If you set the option to the special string "disabled", then there
	  will be no keybinding for this.
	</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/imsettings-applet/xsettings_manager</key>
      <applyto>/apps/imsettings-applet/xsettings_manager</applyto>
      <owner>imsettings-applet</owner>
      <type>string</type>
      <default>auto</default>
      <locale name="C">
	<short>Run a facility of XSETTINGS manager</short>
	<long>
	  If "auto" is set, imsettings-applet has a facility of XSETTINGS manager as needed. if you want to disable it explicitly, set "disabled".
	</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/imsettings-applet/show_icon</key>
      <applyto>/apps/imsettings-applet/show_icon</applyto>
      <owner>imsettings-applet</owner>
      <type>bool</type>
      <default>FALSE</default>
      <locale name="C">
	<short>Show the status icon</short>
	<long>
	  If true, the icon will be displayed at the systray.
	</long>
      </locale>
    </schema>
  </schemalist>
</gconfschemafile>
